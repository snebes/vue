{% block vue_color_picker_widget %}
    <color-picker id="{{ id }}" name="{{ full_name }}"
            {%- if value is not empty %} value="{{ value }}"{% endif -%}
            {%- if required %} required="true"{% endif -%}></color-picker>
{% endblock %}

{% block vue_proponent_choice_widget %}
    <select></select>
{% endblock %}

{% block vue_ck_editor_widget %}
    <ck-editor
        id="{{ id }}"
        name="{{ full_name }}"
        v-bind:config="{{ config|json_encode }}">
        {{ value }}
    </ck-editor>
{% endblock %}
